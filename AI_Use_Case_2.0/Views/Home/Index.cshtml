@{
    ViewData["Title"] = "Use Case 2";
}
<!DOCTYPE html>
<html>
<head>
<style>

.button1 {background-color: #4CAF50;} /* Green */

</style>
</head>
<body>
    
<h1>Use Case 2</h1>

@using (Html.BeginForm("Get", "Home", FormMethod.Post))
{
    <label>Prompt 1:</label>
    <textarea type="text" name="prompt1"></textarea>
    <br />

    <label>Prompt 2:</label>
    <textarea type="text" name="prompt2"></textarea>
    <br />

    <label>Prompt 3:</label>
    <textarea type="text" name="prompt3"></textarea>
    <br />

    <!-- Add input fields for the user to enter the desired CSV file names -->
    <label>CSV File Name for Response 1:</label>
    <input type="text" name="csvFileName1" />
    <br />

    <label>CSV File Name for Response 2:</label>
    <input type="text" name="csvFileName2" />
    <br />

    <label>CSV File Name for Response 3:</label>
    <input type="text" name="csvFileName3" />
    <br />

   
    <button class="button button1" type="submit" value="Submit">Submit</button>
}

@if (ViewBag.FileNames != null && ViewBag.FileNames.Count > 0)
{
    <h2>Generated Responses:</h2>
    @for (int i = 0; i < ViewBag.FileNames.Count; i++)
    {
        string fileName = ViewBag.FileNames[i];
        <p>
            <a href="@Url.Action("Download", new { fileName = fileName })">@fileName</a>
        </p>
    }
}
</body>
</html>